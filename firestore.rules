rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to create, read, and write their own profile data.
    // This is a secure rule as it checks that the user's ID (request.auth.uid)
    // matches the document ID they are trying to access (userId).
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
